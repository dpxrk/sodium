extends layout
append head
  script(src="/javascripts/index.js" type="module" defer)
  link(rel='stylesheet' href='/stylesheets/login-and-signup.css')

block content
  body
  .form-container

    .form-title Login
    //- img.logo-container(src="/images/whitelogo.png", alt="")
    form(action="login" method="POST")
      input(type='hidden', name='_csrf' value=csrfToken)
      div
        //- label.form-desc Email Address
        input(type='email' name='email' placeholder='Email Address'
        required)
      div
        //- label.form-desc Password
        br
        input(type='password' name='password' placeholder='Password' required)
      div
        button.login-button(type='submit') Submit
